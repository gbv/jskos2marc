#!/usr/bin/env php
<?php

require __DIR__ . '/../src/jskos2marc.php';

array_shift($argv);
$convert = 'JSKOS\jskos2marcxml';
if ('-j' === $argv[0]) {
    $convert = 'JSKOS\jskos2marcjson';
    array_shift($argv);
}
if (!count($argv)) $argv = ['php://stdin'];

foreach ($argv as $file) {
    $handle = fopen($file, 'r');
    $json = stream_get_contents($handle);
    fclose($handle);

    $jskos = JSKOS\jskos_decode($json);
    echo $convert($jskos);
}
